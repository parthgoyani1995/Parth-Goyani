{{ 'ecom-banner.css' | asset_url | stylesheet_tag }}


{% schema %}
{
  "name": "Ecom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "header",
      "content": "Banner announcement bar"
    },
    {
      "type": "image_picker",
      "id": "announcement_logo",
      "label": "Announcement Logo"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button background Color",
      "default": "#fff544"
    },
    

  ],
  "presets": [
    {
      "name": "Ecom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
