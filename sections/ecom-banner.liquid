{{ 'ecom-banner.css' | asset_url | stylesheet_tag }}
<style>
    .ecom-container {
        max-width: {{ section.settings.container_width }}px;
    }

    .ecom-banner-button {
        background: linear-gradient(to right, {{ section.settings.button_hover_color }} 50%, {{ section.settings.button_background_color }} 50%);
        background-size: 200% 100%;
        background-position: right bottom;
        transition: all 0.3s ease-out;
    }

    .ecom-banner-button:hover {
        background-position: left bottom;
        color: #FFFFFF;
    }

    .ecom-banner-button svg path {
        transition: all 0.3s ease-in-out;
    }

    .ecom-banner-button:hover svg path {
        fill: #FFF;
    }


    .ecom-banner-announcement {
        background-color: {{ section.settings.announcement_background_color }};
    }
</style>

<section class="ecom-banner-section">
	<div class="ecom-banner-announcement">
		<div class="ecom-container">
			<div class="ecom-banner-announcement-wrapper">
				{% if section.settings.announcement_logo %}
					<img src="{{ section.settings.announcement_logo | img_url: '300x' }}" alt="Announcement Logo"
					     class="ecom-banner-logo">
				{% endif %}
				<p class="ecom-banner-text">{{ section.settings.announcement_text }}</p>
				<a href="{{ section.settings.button_link }}" class="ecom-banner-button">
					{{ section.settings.button_text }}
					{% render 'right-arrow-icon' %}
				</a>
			</div>
		</div>
	</div>
	<div class="ecom-banner-image-area">
		<img src="{{ section.settings.banner_image | img_url: '2048x' }}" alt="Banner Image" class="ecom-banner-img">
		<div class="ecom-container">
			<div class="content-wrapper">
				<div class="ecom-banner-content">
					<h2 class="ecom-banner-title">{{ section.settings.content_title }}</h2>
					<h3 class="ecom-banner-subtitle">{{ section.settings.content_subtitle }}</h3>
					<div class="ecom-banner-description">
						{{ section.settings.content_description }}
					</div>
					<a href="{{ section.settings.content_button_link }}" class="ecom-banner-button">
						{{ section.settings.content_button_text }}
						{% render 'right-arrow-icon' %}
					</a>
				</div>
			</div>
		</div>
	</div>
</section>

{% schema %}
{
  "name": "Ecom Banner",
  "settings": [
    {
      "type": "range",
      "id": "container_width",
      "label": "Container Width",
      "default": 1200,
      "min": 1000,
      "max": 1900,
      "step": 50
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "header",
      "content": "Banner announcement bar"
    },
    {
      "type": "color",
      "id": "announcement_background_color",
      "label": "Announcement Background Color",
      "default": "#F5F5F5"
    },
    {
      "type": "image_picker",
      "id": "announcement_logo",
      "label": "Announcement Logo"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Background Color",
      "default": "#fff544"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Banner Content"
    },
    {
      "type": "text",
      "id": "content_title",
      "label": "Content Title",
      "default": "Welcome to our store!"
    },
    {
      "type": "text",
      "id": "content_subtitle",
      "label": "Content Subtitle",
      "default": "Discover our latest products"
    },
    {
      "type": "richtext",
      "id": "content_description",
      "label": "Content Description",
      "default": "<p>Shop the latest trends and styles.</p>"
    },
    {
      "type": "text",
      "id": "content_button_text",
      "label": "Content Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "content_button_link",
      "label": "Content Button Link"
    },
    {
      "type": "color",
      "id": "content_button_background_color",
      "label": "Content Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "content_button_hover_color",
      "label": "Content Button Hover Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Ecom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
